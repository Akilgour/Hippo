@inherits DeleteDialogBase
<h3>DeleteDialog</h3>

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">@DeleteItem.DialogTitle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@DeleteItem" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <p>@DeleteItem.DeleteCaption</p>
                        <div class="form-group">
                            <label for="userValue">Item to be deleted: </label>
                            <InputText id="userValue" 
                                       class="form-control" 
                                       @bind-Value="@DeleteItem.UserValue" 
                                       placeholder="Item to be deleted">
                            </InputText>
                            <ValidationMessage For="@(() => DeleteItem.UserValue)" />
                        </div>
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}