@inherits ErrorLogPagedListTableBase

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>TimeStamp</th>
            <th>Message</th>
            <th>Machine Name</th>
            <th>Exception Message</th>
            <th>Request Path</th>
            <th>Assembly</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ErrorLogPagedList.ErrorLogs)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.TimeStamp</td>
            <td>@item.Message</td>
            <td>@item.MachineName</td>
            <td>@item.ExceptionMessage</td>
            <td>@item.RequestPath</td>
            <td>@item.Assembly</td>
            <td>
                <a href="@($"EditDetailLogComments/{item.Id}")">
                    <i class="fas fa-comment-alt"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>